extends layout

block content
  .container.logout-panel
    .row
      a(href='/logout' class="btn btn-primary pull-right") Logout
  .container
    .row
      h2.page-header Images
      .col-md-12
        table.table.table-striped.table-bordered.table-hover
          thead
            tr(role="row")
              th Name
              th Description
              th Uploaded On
              th Format
              th URL
              th Remove?
          tbody
            each image in images
              tr(role="row")
                td= image.name
                td= image.description
                td= image.uploaded_on
                td= image.image.format
                td= image.image.url
                td
                  form(method="post", action='/dashboard/delete')
                    input(type="hidden", name="id", value= image._id)
                    button.btn.btn-danger(type="submit") Del
  .container
    .row
      h2.page-header Upload Image
      form(role="form" method="post" action="/dashboard/upload" enctype="multipart/form-data")
        .form-group
          label Description
          input.form-control(type="text" name="description")
        .form-group
          label Image
          input.form-control(type="file", name="file")
        .form-group
          button.btn.btn-primary(type="submit") Submit
